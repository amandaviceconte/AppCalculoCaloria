<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resultado">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:gravity="center"
        android:text="Seu IMC:"
        android:textColor="@android:color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079" />

    <TextView
        android:id="@+id/FinalResult"
        android:layout_width="200dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:textColor="#2a7fff"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="368dp"
        android:layout_height="250dp"
        android:layout_marginBottom="100dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="181dp"
            android:layout_height="match_parent"
            android:background="@drawable/outer_border"
            android:orientation="vertical">
            <!-- android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"-->


            <TextView
                android:id="@+id/imc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/customborder"
                android:gravity="center"
                android:orientation="vertical"
                android:text="@string/imc"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="23sp"
                android:textStyle="bold"
                tools:layout_marginTop="7dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/imc1"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/imc2"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/imc3"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/imc4"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/imc5"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/imc6"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="181dp"
            android:layout_height="match_parent"
            android:background="@drawable/outer_border"
            android:orientation="vertical">

            <TextView
                android:id="@+id/classificacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/customborder"
                android:gravity="center"
                android:orientation="vertical"
                android:text="@string/classificacao"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="23sp"
                android:textStyle="bold"
                tools:layout_marginTop="7dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/resultado1"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/resultado2"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/resultado3"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/resultado4"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/resultado5"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/resultado6"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/voltarMenuButton"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:layout_marginBottom="17dp"
        android:layout_marginTop="15dp"
        android:background="#2b41cb"
        android:textColor="#ffffff"
        android:text="Voltar ao Menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/btnRecalcularIMC"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="69dp"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="69dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="14dp"
        android:background="#2b41cb"
        android:textColor="#ffffff"
        android:text="Recalcular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/voltarMenuButton"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</android.support.constraint.ConstraintLayout>